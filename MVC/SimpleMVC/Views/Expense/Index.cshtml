@model IEnumerable<SimpleMVC.Models.Expense>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense List</h2>
        </div>
        <div class="col-6 text-right w-75">
            <a asp-controller="Expense" asp-Action="Create" class="btn btn-primary">Create new Expense</a>
        </div>
    </div>
    <br/>
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-stripped" style="width: 100%;">
            <thead>
                <tr>
                    <th>Expense Name</th>
                    <th>Ammount</th>
                    <th>Changes</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var expense in Model)
                {
                    <tr>
                        <td width="30%">@expense.ExpenseName</td>
                        <td width="30%">@expense.Amount</td>
                        <td width="40%">
                           <div class="w-100 btn-group" role="group">
                                <a asp-controller="Expense" asp-Action="Update" asp-route-id="@expense.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Expense" asp-Action="Delete" asp-route-id="@expense.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>No expense</h1>
    }
</div>