@model IEnumerable<SimpleMVC.Models.Item>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Items List</h2>
        </div>
        <div class="col-6 text-right w-75">
            <a asp-controller="Item" asp-Action="Create" class="btn btn-primary">Create new Item</a>
        </div>
    </div>
    <br/>
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-stripped" style="width: 100%;">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="30%">@item.ItemName</td>
                        <td width="30%">@item.Borrower</td>
                        <td width="30%">@item.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>No Items</h1>
    }
</div>